<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Drivers"
        app:enabled="false">

        <EditTextPreference
            app:key="owner"
            app:title="Owner"
            app:useSimpleSummaryProvider="true" />

        <MultiSelectListPreference
            app:key="drivers"
            app:title="Drivers"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Car">

        <EditTextPreference
            app:key="name"
            app:title="Car name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="type"
            app:title="car type"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="speedEnabled"
            android:title="Speed Enabled" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="drainEnabled"
            android:title="Drain Enabled" />


    </PreferenceCategory>

</PreferenceScreen>
